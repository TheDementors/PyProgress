[flake8]

jobs = auto
verbose = 0
quiet = 0

format = default
count = True
show-source = True
statistics = True

ignore = E133, E203

output-file = flake8.log
tee = True

exclude =
    .git,
    __pycache__,
    .github,
    __pytest_cache__,
    .vscode,
    venv,
    build,
    dist,
    docs,
    htmlcov,
    ignore,
    py_progress_torch.egg-info,
    test.py,
    conftest.py

filename =
    *.py

disable-noqa = False
max-line-length = 88
max-complexity = 15
hang-closing = True

doctests = True

per-file-ignores =
    __init__.py: F401
